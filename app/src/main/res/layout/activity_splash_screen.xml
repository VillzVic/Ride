<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".views.activities.onboarding.SplashScreenActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:contentDescription="taxi"
            android:id="@+id/taxi" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_taxi_driver" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/ride"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:textStyle="normal"
            android:fontFamily="@font/rm"
            android:layout_height="wrap_content"
            android:id="@+id/ride_text" android:textSize="60sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/splash_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ride_description"
            android:textSize="22sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/rr"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/taxi"/>
</androidx.constraintlayout.widget.ConstraintLayout>